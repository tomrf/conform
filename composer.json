{
    "name": "tomrf/conform",
    "description": "pdo sql query builder and executer",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tomrf\\Conform\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "8.*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4",
        "friendsofphp/php-cs-fixer": "^3.7",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest"
    },
    "scripts": {
        "cs-fixer": [
            "php-cs-fixer fix --diff --verbose --allow-risky=yes src/ ; rm .php-cs-fixer.cache"
        ],
        "phpstan": [
            "phpstan analyze --level 5 src/"
        ],
        "phpunit": [
            "phpunit"
        ]
    }
}

